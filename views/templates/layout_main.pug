doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport")
        title MS - #{user.name}
        include includes/essential_stylesheets
        block extra_stylesheets

    body(class='hold-transition skin-blue-light sidebar-mini')
        .wrapper
            header.main-header
                a.logo(href='/index')
                    span.logo-mini #[b S]MS
                    span.logo-lg #[b Students]MS
                nav(class='navbar navbar-static-top' role="navigation")
                    a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
                        span.sr-only Toggle navigation
            aside.main-sidebar
                section.sidebar
                    .user-panel
                        div(class='pull-left image')
                            img.img-circle(src=user.avatar , alt="User Image")
                        div(class='pull-left info')
                            p= user.name
                            a(href='/logout') #[small Click here to logout]
                    ul.sidebar-menu
                        li.header Menu
                        li(class={active: currentUrl == '/index'})
                            a(href='/index')
                                i(class='fa fa-link')
                                span Download
                        li(class={active: currentUrl == '/operations'})
                            a(href='/index')
                                i(class='fa fa-link')
                                span Other operations
            .content-wrapper
                section.content-header
                    h1.
                        #{content_title}
                section.content
                    block content
            footer.main-footer
                div(class='pull-right hidden-xs') by qiygu
        include includes/essential_javascripts
        block extra_javascripts


